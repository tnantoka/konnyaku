<% title = "#{time_ago(@version.reify.updated_at, plain: true)} #{@settings.site.dot} #{t('history')} #{@settings.site.dot} #{@post.title(current_lang)}" %>
<% content_for(:title) { title } %>

<div class="page-header">
  <h1>
    <%= "#{t('history')} #{@settings.site.dot} #{@post.title(current_lang)}" %>
    <small><%= time_ago(@version.reify.updated_at) %></small>
  </h1>
</div>

<div class="row">
  <div class="span6">
    <%= @version.reify.title %>
  </div>
  <div class="span6">
    <%= diff(@version, :title) %>
  </div>
</div>

<hr />

<div class="row">
  <div class="span6">
    <%= @version.reify.html.html_safe %>
  </div>
  <div class="span6">
    <%= diff(@version, :body) %>
  </div>
</div>

<hr />

<ul class="unstyled">
  <li><%= link_to t('back_to_histories'), post_versions_path(@post) %></li>
  <li><%= link_to t('back_to_post'), @post %></li>
</ul>

