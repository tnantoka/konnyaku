<% title = "#{t(:histories)} #{@settings.site.dot} #{@post.title(current_lang)}" %>
<% content_for(:title) { title } %>

<div class="page-header">
  <h1><%= title %></h1>
</div>

<ul class="unstyled">
  <% @versions.each_with_index do |version, i| %>
  <li>
    <%= link_to "#{t('version')} #{i + 1}", [@post, version] %>
    <small><%= time_ago(version.reify.updated_at) %></small>
  </li>
  <% end %>
</ul>

<ul class="unstyled">
  <li><%= link_to t('back_to_post'), @post %></li>
</ul>

