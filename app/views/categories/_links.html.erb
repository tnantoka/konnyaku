<% if user_signed_in? %>
  <ul class="unstyled">
    <li>
      <%= link_to :new_category do %>
        <i class="icon-plus"></i> <%= t('new_category') %>
      <% end %>
    </li>
    <% unless current_page?(action: :index) %>
      <li>
        <%= link_to :categories do %>
          <i class="icon-folder-close"></i> <%= t('list_categories') %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
